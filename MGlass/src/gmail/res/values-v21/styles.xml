<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ConversationListFadeBase" parent="@android:style/Widget.Material.ListView">
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="MinTimeProgressViewStyle" parent="@android:style/Widget.Material.ProgressBar" />
    <style name="MinTimeProgressDialogStyleBase" parent="@android:style/Theme.Material.Dialog" />
    <style name="UnifiedEmailTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:listViewWhiteStyle">@android:style/Widget.Material.ListView</item>
        <item name="android:actionModeBackground">@android:color/background_dark</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowButtonStyle</item>
        <item name="android:colorPrimary">#ff161616</item>
        <item name="android:colorPrimaryDark">#ff161616</item>
        <item name="android:colorAccent">#ffffffff</item>
        <item name="android:colorEdgeEffect">#ffffffff</item>
        <item name="android:statusBarColor">#ff000000</item>
        <item name="android:colorBackground">#80000000</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:colorBackgroundCacheHint">#80000000</item>
        <item name="android:cacheColorHint">#80000000</item>
    </style>
    <style name="ActionBarOverflowButtonStyle"
        parent="@android:style/Widget.Material.ActionButton.Overflow" />
    <style name="AccountSetupDialogActivityTheme"
        parent="@android:style/Theme.Material.Dialog.NoActionBar">
        <item name="android:colorPrimary">#ff000000</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
        <item name="android:colorAccent">#ffffffff</item>
    </style>
    <style name="LabelSyncTheme" parent="@android:style/Theme.Material.Dialog" />
    <style name="GmailTheme.NoActionBar" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:colorPrimary">#ff000000</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
        <item name="android:colorAccent">#ffffffff</item>
        <item name="android:colorEdgeEffect">#ffffffff</item>
        <item name="android:statusBarColor">#ff000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">#40000000</item>
    </style>
    <style name="GmailTheme.NoActionBar.Fullscreen"
        parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:colorPrimary">#ff161616</item>
        <item name="android:colorPrimaryDark">#ff161616</item>
        <item name="android:colorAccent">#ffffffff</item>
        <item name="android:colorEdgeEffect">#ffffffff</item>

        <item name="android:statusBarColor">#ff000000</item>
        <!--<item name="android:actionBarStyle">@*common:style/Pitch.ActionBar</item>-->
        <item name="android:navigationBarColor">#80000000</item>
        <item name="android:textColor">#ffffffff</item>
    </style>


    <style name="GmailTheme.NoActionBar.SetupAddresses" parent="@style/GmailTheme.NoActionBar">
        <item name="android:colorPrimary">#ff000000</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
    </style>
    <style name="GmailTheme.NoActionBar.WelcomeTour" parent="@style/GmailTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
    </style>

    <!--2016/01/03-->
    <style name="RecipientEditTextViewBase" parent="@android:style/Widget.DeviceDefault.AutoCompleteTextView">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
    </style>

    <style name="AbstractComposeArea">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#80000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="AbstractCalendarPromotionStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#80000000</item>
        <item name="android:paddingBottom">20.0dip</item>
        <item name="android:layout_margin">8.0dip</item>
        <item name="android:minHeight">60.0dip</item>
    </style>
</resources>
